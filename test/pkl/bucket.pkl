// Represents a CloudFormation template that creates buckets

amends "modules/template.pkl"
import "modules/s3.pkl"
import "modules/patterns/bucket.pkl"

Description = "Create a bucket"

Metadata { 
    ["Foo"] = "bar"
}

Parameters {
    ["Name"] {
        Type = "String"
        Default = "baz"
    }
}

Resources {
    ["UntypedBucket"] {
        Type = "AWS::S3::Bucket"
        Properties {
           ["BucketName"] {
                ["Ref"] = "Name"
           }
        }
    }

    ["TypedBucket1"] = new s3.Bucket {
        BucketName = "foo"
    }

    ["TypedBucket2"] = new s3.Bucket {
        BucketName = Ref("Name")
    }

    for (name in List("bucketx", "buckety", "bucketz")) {
        [name] = new s3.Bucket {
            BucketName = name
        }
    }

    // Import multiple resources from a pattern module 
    for (_key, _val in bucket.resources()) {
        ["My" + _key] = _val
    }

}

output {
    renderer = new YamlRenderer {}
}


